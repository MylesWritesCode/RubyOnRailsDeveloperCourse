<h1 class="text-center mb-5">Create New Category</h1>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-4 offset-md-4">
      <%= form_for @category, html: { id: "categoryForm" } do |f| %>
        <div class="form-group" id="formGroupCategory">
          <h3 class="text-center mx-auto">
            <%= f.label :name, class: "form-control-label font-weight-bold mx-auto", for: "name" %>
          </h3>
          <%= f.text_field :name, class: "form-control form-control-warning ml-2 category-text-field", id: "name" %>
        </div>
        <%= f.submit "Submit Category", class: "btn btn-primary btn-lg btn-block mt-4", id: "btnSubmitUser" %>
      <% end %>
    </div>
  </div>
</div>
