// Append new data
$("<%= j render('show-articles', obj: @articles) %>")
  .appendTo($("#articlesIndex"));

// Update pagination link
<% if @articles.last_page? %>
  $('.pagination').html("That's all, folks!");
<% else %>
  $('.pagination')
    .html("<%= j link_to_next_page(@articles, 'Next Page', remote: true) %>");
<% end %>
