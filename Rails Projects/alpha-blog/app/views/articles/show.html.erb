<div class="container-fluid">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h1 class="text-center">View Article</h1><br>
      <% if @article.user %>
        <h3 class="text-center"><%= link_to @article.user.username, user_path(@article.user) %></h3><br>
        <p class="text-center">
          <%= link_to gravatar_for(@article.user), user_path(@article.user) %>
        </p>
      <% end %>
      <h3 class="text-center"> <%= @article.title %> </h3><br>
      <p> <strong>Description: </strong><%= @article.description %> </p>
      <hr>
      <p> <%= @article.body %> </p>
    </div>
  </div>
</div>
