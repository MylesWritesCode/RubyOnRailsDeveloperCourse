<div class="container-fluid">
  <div class="row">
    <div class="col-md-2">
      <!-- Perhaps a sidebar? -->
    </div>
    <div class="col-md-6 offset-md-1">
      <h1 class="text-center">Articles</h1>
      <div class="col-md-4 offset-md-4">
        <% if logged_in? %>
          <%= link_to "New Article", new_article_path, class: "btn btn-primary text-center btn-lg btn-block" %>
        <% end %>
        <%= will_paginate @articles %>
      </div>
      <br>
      <div class="articlesIndex" id="articlesIndex">
        <%= render 'show-articles', obj: @articles %>
      </div>
      <%= will_paginate @articles, remote: true %>
    </div> <!-- col-md-8 -->
  </div> <!-- row -->
</div> <!-- container -->
