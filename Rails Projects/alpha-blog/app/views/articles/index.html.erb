<div class="container-fluid">
  <div class="row">
    <div class="col-md-2">
      <!-- Perhaps a sidebar? -->
    </div>
    <div class="col-md-6 offset-md-1">
      <h1 class="text-center">Articles</h1>
      <div class="col-md-4 offset-md-4">
        <%= link_to "New Article", new_article_path, class: "btn btn-primary text-center btn-lg btn-block" %>
      </div>
      <br>
      <% @articles.each do |article| %>
        <div class="jumbotron p-4">
          <div class="container">
            <h3><%= article.title %></h3>
            <p>by
              <span class="text-muted font-italic">
                <%= article.user_id %>
              </span>
            </p>
            <br><hr>
            <%= article.description %>
            <p class="text-right">
              <%= link_to "Edit", edit_article_path(article.id), class: "btn btn-secondary btn-sm" %>
              <%= link_to "View", article_path(article.id), class: "btn btn-secondary btn-sm" %>
              <%= link_to "Delete", article_path(article.id), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
            </p>
          </div>
        </div>
      <% end %>
    </div> <!-- col-md-8 -->
  </div> <!-- row -->
</div> <!-- container -->
