<h1 class="text-center">Log In</h1>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-4 offset-md-4">
      <%= form_for(:session, url: login_path, html: { id: "logInForm", role: "form" }) do |f| %>
        <div class="form-group">
          <div class="form-group" id="formGroupEmail">
            <%= f.label :email, class: "form-control-label", for: "email" %>
            <%= f.text_field :email, class: "form-control form-control-warning", id: "email", maxlength: 50 %>
          </div>
          <div class="form-group" id="formGroupPassword">
            <%= f.label :password, class: "form-control-label", for: "password" %>
            <%= f.password_field :password, class: "form-control", id: "password", autocomplete: "off" %>
          </div>
          <%= f.submit "Log In", class: "btn btn-primary btn-lg btn-block", id: "btnLogIn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
