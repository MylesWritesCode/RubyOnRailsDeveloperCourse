// Append new data
$("<%= j render('show-users') %>")
  .appendTo($("#usersIndex"));

// Update pagination link
<% if @lessons.last_page? %>
  $('.pagination').html("That's all, folks!");
<% else %>
  $('.pagination')
    .html("<%= j link_to_next_page(@users, 'Next Page', remote: true) %>");
<% end %>
