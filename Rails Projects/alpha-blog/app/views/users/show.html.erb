<h1 class="text-center">Public Profile</h1>
<div class="col-md-4 offset-md-4">
  <hr>
  <h2 class="text-center"><%= @user.username %><h2>
  <p class="text-center">
    <%= gravatar_for @user %>
  </p>
  <% if logged_in? && current_user.id == @user.id %>
    <p class="text-center">
      <%= link_to "Create New Article", new_article_path, class: "btn btn-primary text-center btn-lg" %>
    </p>
  <% end %>
  <h3 class="text-center">
    <%= @user.username %>'s Articles
  </h3>
  <hr>
  <%= paginate @user_articles %>
  <div class="showUserArticles" id="showUserArticles">
    <%= render '/articles/show-articles', obj: @user_articles %>
  </div>
  <%= paginate @user_articles, remote: true %>
</div>
