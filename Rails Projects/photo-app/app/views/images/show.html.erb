<div class="my-5 pt-5 pb-0">
  <h3 class="text-center display-4">
    <%= @image.name %>
    <strong>by </strong>
    <%= @image.user.email %>
  </h3>
</div>
<div class="text-center">
  <%= image_tag(@image.picture.url, class: "img-fluid mx-auto") if @image.picture? %>
  <br>
  <%= link_to 'Edit', edit_image_path(@image) %> |
  <%= link_to 'Back', images_path %>
</div>
