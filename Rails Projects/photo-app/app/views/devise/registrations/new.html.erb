<div class="col-md-5 mx-auto">
  <div class="jumbotron my-5 border-solid-3 transparent-white-bg">
    <h3 class="text-center">Sign up</h3>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: "form", class: "cc-form", id: "cc-form" }) do |f| %> <!-- signup begin -->
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>

      <!-- form payments begin -->
      <div class="form-group">
        <%= label_tag :card_number, "Card Number", data: { stripe: "label" } %>
        <%= text_field_tag :card_number, nil, { class: "form-control", required: "true", data: { stripe: "number" } } %>
      </div>
      <div class="form-group">
        <%= label_tag :card_cvc, "Security Code", data: { stripe: "label" } %>
        <%= text_field_tag :card_cvc, nil, { class: "form-control", required: "true", data: { stripe: "cvc" } } %>
      </div>
      <div class="form-group row">
        <div class="col-12 text-center">
          <%= label_tag :card_expire, "Expiration Date", data: { stripe: "label" } %>
        </div>
        <div class="col-6 mx-auto">
          <%= select_month nil, { add_month_numbers: true}, { id: "expMonth", class: "form-control", data: { stripe: "expMonth" } } %>
        </div>
        <div class="col-6 mx-auto">
          <%= select_year nil, { start_year: Date.today.year, end_year: Date.today.year + 15 }, { id: "expYear", class: "form-control", data: { stripe: "expYear" } } %>
        </div>
      </div> <!-- form-group row -->
      <!-- form payments end -->

      <div class="actions text-center">
        <%= f.submit "Sign up", class: "btn btn-success mt-3", id: "btnSignUpSubmit" %>
        <div class="alert" id="errors">

        </div>
      </div>
    <% end %> <!-- signup end -->
    <p class="text-center mt-4">
      <%= render "devise/shared/links" %>
    </p>
  </div> <!-- jumbotron -->
</div> <!-- col-md-5 offset-md-1 -->
<%= javascript_include_tag "https://js.stripe.com/v2/" %>
<script type="text/javascript">
  Stripe.setPublishableKey("<%= ENV['STRIPE_TEST_PUBLISHABLE_KEY'] %>");
</script>
