<!DOCTYPE html>
<html>
  <head>
    <title>Photo App</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-2 mx-auto">
        </div>
        <div class="col-md-8 top-nav-menu my-0 mx-auto">
          <nav class="navbar navbar-toggleable-md navbar-light bg-white fixed-top">
            <button class="navbar-toggler navbar-toggler-left" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">

              <div class="navbar-nav offset-md-2">
                <div class="nav-item active">
                  <%= link_to (fa_icon "home", text: "Home"), "#", class: "nav-link fa-lg" %>
                </div>
                <div class="nav-item">
                  <%= link_to (fa_icon "user-circle", text: "Link"), "#", class: "nav-link fa-lg" %>
                </div>
                <div class="nav-item">
                  <%= link_to (fa_icon "user-circle", text: "Link"), "#", class: "nav-link fa-lg" %>
                </div>
              </div>
              <div class="mx-md-auto">
                <%= link_to "#", class: "navbar-brand" do %>
                  PHOTO
                  <%= fa_icon "camera-retro" %>
                  APP
                <% end %>
              </div>
              <div class="mr-auto">
                <% if user_signed_in? %>
                  <%= link_to "Log Out", "#", class: "btn btn-outline-danger my-0 mx-1" %>
                <% else %>
                  <%= link_to "Sign Up", "#", class: "btn btn-outline-primary my-0 mx-1" %>
                  <%= link_to "Log In", "#", class: "btn btn-outline-primary my-0 mr-1 ml-0" %>
                <% end %>
              </div>
            </div>
          </nav>
        </div> <!-- col-md-8 -->
        <div class="col-md-2 mx-auto">
        </div> <!-- col-md-2 mx-auto -->
      </div> <!-- row -->
    </div> <!-- container-fluid -->
    <div class="col-md-8 offset-2 my-5">
      <%= yield %>
    </div> <!-- col-md-8 offset-2 -->
  </body>
</html>
